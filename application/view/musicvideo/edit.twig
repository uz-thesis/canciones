{% include '_templates/header.twig' %}
<form action="{{ constant('URL') }}musicvideo/updatemusicvideo" method="POST">
    <div class="form-group">
        <input autofocus="autofocus" type="text" class="form-control" id="name" name="name" value="{{ musicvideo.musicVideoName }}" placeholder="Song title" required="required"/>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="author" name="author" value="{{ musicvideo.musicVideoAuthor }}" placeholder="Artist" required="required"/>
    </div>
    <div class="form-group">
        <textarea class="form-control" id="desc" name="desc" placeholder="Description">{{ musicvideo.musicVideoDesc }}</textarea>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="is_live" name="is_live" {{ musicvideo.musicVideoIsLive ? 'checked' : '' }}/>
        <label for="is_live" class="form-check-label">Is live?</label>
    </div>
    <input type="hidden" name="id" value="{{ musicvideo.musicVideoId }}"/>
    <input type="submit" class="btn btn-primary mb-2 mt-2" id="submit_update_musicvideo" name="submit_update_musicvideo" value="Update music video info"/>
</form>
{% include '_templates/footer.twig' %}
